<?xml version="1.0" encoding="UTF-8"?> 
<configuration status="debug" name="build_service">

  <appenders>
    <Console name="STDOUT">
      <PatternLayout pattern="%m%n"/>
    </Console>
    <List name="List">
      <ThresholdFilter level="debug"/>
    </List>
    <File name="MyFile" fileName="logs/webapp.log">
   		<PatternLayout>
        	<pattern>%d %p %C{1.} [%t] %m%n</pattern>
    	</PatternLayout>
    </File>
    <Asynch name="Asynch">
      <appender-ref ref="MyFile"/>
    </Asynch>
  </appenders>

  <loggers>
    <logger name="EventLogger" level="info" additivity="false">
      <appender-ref ref="Routing"/> 
    </logger>

    <root level="warn">
      <appender-ref ref="Asynch"/>
    </root>
  </loggers>

</configuration>